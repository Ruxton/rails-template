!!! 5
%html.no-js{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %title= page_title
    = yield(:stylesheets)
    = csrf_meta_tags
    = favicon_link_tag "favicon.ico"
    %meta{name: "viewport", content: "width=device-width,initial-scale=1"}

  %body.pushable
    = link_to "Skip to main content", "#skip-to-content", class: "visually-hidden"
    %h1.visually-hidden= page_title

    .ui.vertical.inverted.sidebar.menu.left
      = yield(:navigation) if content_for?(:navigation)
      - if current_user
        = link_to "Sign out", destroy_user_session_path, method: :delete, class: "item"
      - else
        = link_to "Sign in", new_user_session_path, class: "item"
        = link_to "Sign up", new_user_registration_path, class: "item"

    .pusher
      .ui.inverted.vertical.masthead.center.aligned.segment
        .ui.container
          .ui.large.secondary.inverted.pointing.menu
            %a.toc.item
              %i.sidebar.icon
            = yield(:navigation) if content_for?(:navigation)
            .right.item
              - if current_user
                = link_to "Sign out", destroy_user_session_path, method: :delete, class: "ui inverted button"
              - else
                = link_to "Sign in", new_user_session_path, class: "ui inverted button"
                = link_to "Sign up", new_user_registration_path, class: "ui inverted button"

        #skip-to-content
          - if flash.any?
            .ui.inverted.padded.vertical.segment
              - flash.each do |key, value|
                .ui{class: flash_class(key)}= value

          = content_for?(:content) ? yield(:content) : yield

    = yield(:javascripts)
    = javascript_include_tag "easy_sign_in" if Rails.application.config.should_show_easy_login
