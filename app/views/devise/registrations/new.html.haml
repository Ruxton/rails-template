.authentication

  %h2= current_page_title

  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "authentication-form" }) do |f|

    = f.input :given_names, autofocus: true, input_html: {maxlength: User::MAX_NAME_LENGTH}
    = f.input :family_name, input_html: {maxlength: User::MAX_NAME_LENGTH}
    = f.input :email
    = f.input :password, autocomplete: "off", hint: "Minimum is #{Rails.configuration.devise.password_length.min} characters"
    = f.input :password_confirmation, autocomplete: "off"
    = f.button :submit, "Sign up"

  = render "devise/shared/links"
